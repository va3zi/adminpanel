# Database URL for SQLAlchemy
# Example for PostgreSQL: DATABASE_URL=postgresql://user:password@host:port/dbname
# Example for SQLite (for local dev, not recommended for prod): DATABASE_URL=sqlite:///./test.db
DATABASE_URL=postgresql://vpnadmin_user:vpnadmin_password@localhost:5432/vpnadmin_db

# JWT Settings
# Generate a strong secret key, e.g., using: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Marzban API (Details to be added when integrating Marzban)
# Ensure this is the API endpoint of YOUR Marzban instance, not the panel itself if they differ.
# The Marzban panel often runs on port 8000 by default.
MARZBAN_API_BASE_URL=http://YOUR_MARZBAN_HOST:PORT/api # Adjust if /api prefix is not used by Marzban for its core API
MARZBAN_SUDO_USERNAME=your_marzban_sudo_admin_username
MARZBAN_SUDO_PASSWORD=your_marzban_sudo_admin_password
# MARZBAN_API_TOKEN= # If Marzban uses a persistent API token instead of username/password login for API

# Abresani API (Details to be added when integrating Abresani)
# ABRESANI_API_KEY=
# ABRESANI_API_BASE_URL=https://panel.abresani.com/api

# Zarinpal (Details to be added when integrating Zarinpal)
# ZARINPAL_MERCHANT_ID=
# ZARINPAL_CALLBACK_URL=http://localhost:YOUR_BACKEND_PORT/api/v1/payments/zarinpal/callback
# ZARINPAL_API_REQUEST_URL=https://api.zarinpal.com/pg/v4/payment/request.json
# ZARINPAL_API_VERIFY_URL=https://api.zarinpal.com/pg/v4/payment/verify.json
# ZARINPAL_API_STARTPAY_URL=https://www.zarinpal.com/pg/StartPay/

# Default Super Admin (optional, can be created via CLI or first run)
# INITIAL_SUPER_ADMIN_USERNAME=superadmin
# INITIAL_SUPER_ADMIN_EMAIL=superadmin@example.com
# INITIAL_SUPER_ADMIN_PASSWORD=supersecretpassword
